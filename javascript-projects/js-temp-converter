const kelvin = 0;
// kelvin is a constant, and can't change
const celsius = kelvin - 273;
// celsius is always 273 less degrees than kelvin
let newton = celsius * (33/100);
newton = Math.floor(newton)
let fahrenheit = celsius *  (9/5) + 32;
// this is how to convert celsius to fahrenheit - let allows it to be re-assigned
fahrenheit = Math.floor(fahrenheit);
//.floor() allows you to round down decimals
console.log(`The tempurature is ${newton} degrees Newton.`)
// output is "The tempurature is -91 degrees Newton."
